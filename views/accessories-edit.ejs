<h3 style="color: white; text-align: center;">EDIT <%= accessorie.name %></h3>

<form action="/accessories/<%= accessorie.id %>?_method=put" method="post" class="form-main">
    <label for="" class="label-name">NAME</label>
    <input type="text" name="name" value="<%= accessorie.name %>">
    
    <label for="" class="label-image">MAIN IMAGE</label>
    <input type="text" name="image_url" value="<%= accessorie.image_url %>">

    <label for="" class="label-image">IMAGE ONE</label>
    <input type="text" name="image_url_1" value="<%= accessorie.image_url_1 %>">

    <label for="" class="label-image">IMAGE TWO</label>
    <input type="text" name="image_url_2" value="<%= accessorie.image_url_2 %>">

    <label for="" class="label-price">PRICE</label>
    <input type="text" name="price" value="<%= accessorie.price %>">

    <label for="" class="label-description">DESCRIPTION</label>
    <textarea name="description"><%= accessorie.description %></textarea>

    <button class="post-edit-btn">UPDATE</button>
</form>